<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.library.OkTabIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:tiRectColor="#ff0000"
        itheima:tiRectRadius="15dp"
        itheima:tiRectStrokeColor="#0000ff"
        itheima:tiRectStrokeWidth="2dp"
        itheima:tiRectStyle="fill"
        itheima:tiTabMode="rect"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
